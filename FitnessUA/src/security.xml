<?xml version="1.0" encoding="UTF-8"?>

<is:security xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:is="http://ua.nure.ostpc.malibu.shedule/FitnessUA"
	xsi:schemaLocation="http://ua.nure.ostpc.malibu.shedule/FitnessUA security.xsd">

	<constraint>
		<url-pattern>/login*</url-pattern>
		<right>responsible_person</right>
		<right>admin</right>
	</constraint>

	<constraint>
		<url-pattern>/logout*</url-pattern>
		<right>visitor</right>
	</constraint>

	<constraint>
		<url-pattern>/index*</url-pattern>
		<right>visitor</right>
	</constraint>

	<constraint>
		<url-pattern>/</url-pattern>
		<right>visitor</right>
	</constraint>

	<constraint>
		<url-pattern>/createSchedule*</url-pattern>
		<right>admin</right>
		<right>visitor</right>
	</constraint>
	
	<constraint>
		<url-pattern>/scheduleDraft*</url-pattern>
		<right>responsible_person</right>
		<right>visitor</right>
	</constraint>
	
	<constraint>
		<url-pattern>/error</url-pattern>
		<right>responsible_person</right>
		<right>admin</right>
		<right>visitor</right>
	</constraint>
	
	<constraint>
		<url-pattern>/error/</url-pattern>
		<right>responsible_person</right>
		<right>admin</right>
		<right>visitor</right>
	</constraint>
	
	<constraint>
		<url-pattern>/sheduledraft</url-pattern>
		<right>responsible_person</right>
		<right>admin</right>
		<right>visitor</right>
	</constraint>
	
	<constraint>
		<url-pattern>/sheduledraft/</url-pattern>
		<right>responsible_person</right>
		<right>admin</right>
		<right>visitor</right>
	</constraint>

</is:security>