				    mail.smtp.host="smtp.yandex.ru"
				    mail.smtp.ssl.enable="true"
				    mail.smtp.port="465"
				    mail.smtp.user="fitnessua@ostpc.org.ua" password="Fitnessu@"
				    mail.smtp.from="fitnessua@ostpc.org.ua"
					mail.smtp.socketFactory.class="javax.net.ssl.SSLSocketFactory"
				    mail.debug="true"/>	
